<Page x:Class="GlobusTravelManager.Views.ToursPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Туры" 
      Background="#F8FAFC">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Панель управления -->
        <Border Grid.Row="0" 
                Background="#EFF6FF" 
                Padding="15" 
                Margin="0,0,0,10">
            <StackPanel>
                <TextBlock Text="Управление турами" 
                           FontSize="18" 
                           FontWeight="Bold" 
                           Foreground="#1E3A8A" 
                           Margin="0,0,0,10"/>

                <StackPanel Orientation="Horizontal">
                    <Button x:Name="BtnAddTour" 
                            Content="+ Добавить тур" 
                            Width="140" 
                            Height="35" 
                            Margin="0,0,10,0" 
                            Background="#10B981" 
                            Foreground="White" 
                            BorderBrush="#047857"
                            FontWeight="Bold"
                            Cursor="Hand"
                            Click="BtnAddTour_Click"/>
                    <Button x:Name="BtnEditTour" 
                            Content="✏️ Редактировать" 
                            Width="140" 
                            Height="35" 
                            Margin="10,0" 
                            Background="#FBBF24" 
                            BorderBrush="#D97706"
                            FontWeight="Bold"
                            Cursor="Hand"
                            Click="BtnEditTour_Click"/>
                    <Button x:Name="BtnDeleteTour" 
                            Content="🗑️ Удалить" 
                            Width="140" 
                            Height="35" 
                            Margin="10,0" 
                            Background="#EF4444" 
                            Foreground="White" 
                            BorderBrush="#DC2626"
                            FontWeight="Bold"
                            Cursor="Hand"
                            Click="BtnDeleteTour_Click"/>
                    <Button x:Name="BtnRefresh" 
                            Content="🔄 Обновить" 
                            Width="120" 
                            Height="35" 
                            Margin="10,0" 
                            Background="#3B82F6" 
                            Foreground="White" 
                            BorderBrush="#1D4ED8"
                            FontWeight="Bold"
                            Cursor="Hand"
                            Click="BtnRefresh_Click"/>
                </StackPanel>
            </StackPanel>
        </Border>

        <!-- Панель фильтров -->
        <Border Grid.Row="1" 
                Background="#F1F5F9" 
                Padding="15" 
                Margin="0,0,0,10">
            <StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                    <TextBlock Text="Поиск:" 
                               VerticalAlignment="Center" 
                               Width="60"
                               Foreground="#475569"/>
                    <TextBox x:Name="txtSearch" 
                             Width="250" 
                             Height="30" 
                             Margin="5,0" 
                             Padding="5" 
                             VerticalAlignment="Center"
                             TextChanged="TxtSearch_TextChanged"/>

                    <TextBlock Text="Страна:" 
                               VerticalAlignment="Center" 
                               Margin="20,0,10,0"
                               Foreground="#475569"/>
                    <ComboBox x:Name="cmbCountry" 
                              Width="150" 
                              Height="30" 
                              Margin="5,0"
                              SelectionChanged="CmbSort_SelectionChanged"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="Сортировка:" 
                               VerticalAlignment="Center" 
                               Width="60"
                               Foreground="#475569"/>
                    <ComboBox x:Name="cmbSort" 
                              Width="200" 
                              Height="30" 
                              Margin="5,0"
                              SelectionChanged="CmbSort_SelectionChanged">
                        <ComboBoxItem Content="По дате (возр.)"/>
                        <ComboBoxItem Content="По дате (убыв.)"/>
                        <ComboBoxItem Content="По цене (возр.)"/>
                        <ComboBoxItem Content="По цене (убыв.)"/>
                        <ComboBoxItem Content="По названию"/>
                    </ComboBox>
                </StackPanel>
            </StackPanel>
        </Border>

        <!-- Список туров -->
        <DataGrid Grid.Row="2" 
                  x:Name="dgTours" 
                  AutoGenerateColumns="False" 
                  CanUserAddRows="False" 
                  Background="White" 
                  BorderBrush="#CBD5E1" 
                  RowBackground="#F8FAFC" 
                  AlternatingRowBackground="#F1F5F9"
                  SelectionMode="Single">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Название" 
                                    Binding="{Binding Name}" 
                                    Width=""/>
                <DataGridTextColumn Header="Страна" 
                                    Binding="{Binding CountryName}" 
                                    Width="120"/>
                <DataGridTextColumn Header="Дата начала" 
                                    Binding="{Binding StartDate, StringFormat={}{0:dd.MM.yyyy}}" 
                                    Width="100"/>
                <DataGridTextColumn Header="Длительность" 
                                    Binding="{Binding DurationDays}" 
                                    Width="100"/>
                <DataGridTextColumn Header="Цена" 
                                    Binding="{Binding Price, StringFormat={}{0:N0} ₽}" 
                                    Width="100"/>
                <DataGridTextColumn Header="Свободные места" 
                                    Binding="{Binding AvailableSeats}" 
                                    Width="120"/>
                <DataGridTextColumn Header="Тип автобуса" 
                                    Binding="{Binding BusTypeName}" 
                                    Width="150"/>
            </DataGrid.Columns>
        </DataGrid>

        <!-- Статистика -->
        <Border Grid.Row="3" 
                Background="#F1F5F9" 
                Padding="10">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <TextBlock Text="Всего туров: " 
                           Foreground="#475569" 
                           FontWeight="Bold"/>
                <TextBlock x:Name="tbTotalTours" 
                           Text="0" 
                           Foreground="#1E40AF" 
                           FontWeight="Bold" 
                           Margin="5,0,20,0"/>

                <TextBlock Text="Доступно: " 
                           Foreground="#475569" 
                           FontWeight="Bold"/>
                <TextBlock x:Name="tbAvailableTours" 
                           Text="0" 
                           Foreground="#10B981" 
                           FontWeight="Bold" 
                           Margin="5,0,20,0"/>

                <TextBlock Text="Нет мест: " 
                           Foreground="#475569" 
                           FontWeight="Bold"/>
                <TextBlock x:Name="tbNoSeatsTours" 
                           Text="0" 
                           Foreground="#EF4444" 
                           FontWeight="Bold" 
                           Margin="5,0,0,0"/>
            </StackPanel>
        </Border>
    </Grid>
</Page>