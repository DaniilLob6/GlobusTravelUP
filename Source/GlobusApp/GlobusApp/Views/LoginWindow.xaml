<Window x:Class="GlobusTravelManager.Views.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Вход в систему" 
        Height="400" Width="400"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Background="#F0F8FF">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Заголовок -->
        <Border Grid.Row="0" 
                Background="#1E40AF" 
                Padding="20" 
                Margin="0,0,0,20">
            <TextBlock Text="🌍 GlobusTravelManager" 
                       FontSize="24" 
                       FontWeight="Bold" 
                       Foreground="White" 
                       HorizontalAlignment="Center"/>
        </Border>

        <!-- Поля ввода -->
        <StackPanel Grid.Row="1" 
                    Margin="20,0,20,10">
            <TextBlock Text="Логин:" 
                       FontWeight="SemiBold"
                       Foreground="#1E3A8A" 
                       Margin="0,0,0,5"/>
            <TextBox x:Name="txtLogin" 
                     Height="35" 
                     Padding="8"/>
        </StackPanel>

        <StackPanel Grid.Row="2" 
                    Margin="20,0,20,20">
            <TextBlock Text="Пароль:" 
                       FontWeight="SemiBold"
                       Foreground="#1E3A8A" 
                       Margin="0,0,0,5"/>
            <PasswordBox x:Name="txtPassword" 
                         Height="35" 
                         Padding="8"/>
        </StackPanel>

        <!-- Кнопки входа -->
        <StackPanel Grid.Row="3" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Center" 
                    Margin="0,0,0,10">
            <Button x:Name="BtnLogin" 
                    Content="Войти" 
                    Width="120" 
                    Height="40" 
                    Margin="10,0" 
                    Background="#10B981" 
                    Foreground="White" 
                    BorderBrush="#047857" 
                    FontWeight="Bold"
                    Cursor="Hand"
                    Click="BtnLogin_Click"/>
            <Button x:Name="BtnCancel" 
                    Content="Отмена" 
                    Width="120" 
                    Height="40" 
                    Margin="10,0" 
                    Background="#94A3B8" 
                    Foreground="White" 
                    BorderBrush="#64748B" 
                    FontWeight="Bold"
                    Cursor="Hand"/>
        </StackPanel>

        <!-- Разделитель -->
        <Border Grid.Row="4" 
                BorderBrush="#CBD5E1" 
                BorderThickness="0,1,0,0" 
                Margin="20,10"/>

        <!-- Гостевой режим -->
        <StackPanel Grid.Row="5" 
                    VerticalAlignment="Center" 
                    HorizontalAlignment="Center">
            <TextBlock Text="Или продолжите как гость" 
                       Foreground="#64748B" 
                       FontSize="13" 
                       Margin="0,0,0,15"/>
            <Button x:Name="BtnGuest" 
                    Content="👤 Войти как гость" 
                    Width="200" 
                    Height="45" 
                    Background="#3B82F6" 
                    Foreground="White" 
                    BorderBrush="#1D4ED8" 
                    FontWeight="Bold"
                    Cursor="Hand"
                    Click="BtnGuest_Click"/>
            <TextBlock Text="Гостевой режим позволяет просматривать туры" 
                       Foreground="#64748B" 
                       FontSize="11" 
                       TextWrapping="Wrap"
                       HorizontalAlignment="Center"
                       MaxWidth="300"
                       Margin="0,10,0,0"
                       TextAlignment="Center"/>
        </StackPanel>
    </Grid>
</Window>