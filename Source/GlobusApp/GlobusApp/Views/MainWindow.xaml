<Window x:Class="GlobusTravelManager.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="GlobeTravelManager - Главное меню" 
        Height="600" Width="900"
        WindowStartupLocation="CenterScreen"
        Background="#F8FAFC"
        Closing="Window_Closing">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Шапка -->
        <Border Grid.Row="0" 
                Background="#1E40AF" 
                Padding="20">
            <StackPanel Orientation="Horizontal" 
                        HorizontalAlignment="Center">
                <TextBlock Text="🌍 GlobusTravelManager" 
                           FontSize="24" 
                           FontWeight="Bold" 
                           Foreground="White"/>
                <TextBlock x:Name="tbUserName" 
                           FontSize="14" 
                           Foreground="#E2E8F0" 
                           Margin="20,0,0,0" 
                           VerticalAlignment="Center"/>
            </StackPanel>
        </Border>

        <!-- Основное содержимое -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Панель навигации -->
            <Border Grid.Column="0" 
                    Background="#EFF6FF" 
                    Width="200">
                <StackPanel Margin="10">
                    <TextBlock Text="Навигация" 
                               FontWeight="Bold" 
                               FontSize="16" 
                               Foreground="#1E3A8A" 
                               Margin="0,0,0,10"/>

                    <Button x:Name="BtnTours" 
                            Content="Туры" 
                            Height="40" 
                            Margin="0,5" 
                            Background="#3B82F6" 
                            Foreground="White" 
                            BorderBrush="#1D4ED8"
                            Cursor="Hand"
                            Click="BtnTours_Click"/>
                    <Button x:Name="BtnBuses" 
                            Content="Автобусы" 
                            Height="40" 
                            Margin="0,5" 
                            Background="#3B82F6" 
                            Foreground="White" 
                            BorderBrush="#1D4ED8"
                            Cursor="Hand"
                            Click="BtnBuses_Click"/>
                    <Button x:Name="BtnClients" 
                            Content="Клиенты" 
                            Height="40" 
                            Margin="0,5" 
                            Background="#3B82F6" 
                            Foreground="White" 
                            BorderBrush="#1D4ED8"
                            Cursor="Hand"
                            Click="BtnClients_Click"/>
                    <Button x:Name="BtnBookings" 
                            Content="Бронирования" 
                            Height="40" 
                            Margin="0,5" 
                            Background="#3B82F6" 
                            Foreground="White" 
                            BorderBrush="#1D4ED8"
                            Cursor="Hand"
                            Click="BtnBookings_Click"/>
                </StackPanel>
            </Border>

            <!-- Контент -->
            <Frame Grid.Column="1" 
                   x:Name="MainFrame" 
                   NavigationUIVisibility="Hidden" 
                   Margin="10"/>
        </Grid>

        <!-- Нижняя панель -->
        <Border Grid.Row="2" 
                Background="#1E293B" 
                Padding="10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock x:Name="tbStatus" 
                           Foreground="#E2E8F0" 
                           VerticalAlignment="Center"/>

                <Button x:Name="BtnLogout" 
                        Grid.Column="1"
                        Content="Выйти" 
                        Width="100" 
                        Height="35" 
                        Background="#64748B" 
                        Foreground="White" 
                        BorderBrush="#475569"
                        Cursor="Hand"
                        Click="BtnLogout_Click"/>
            </Grid>
        </Border>
    </Grid>
</Window>