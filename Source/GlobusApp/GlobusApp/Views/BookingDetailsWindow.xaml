<Window x:Class="GlobusTravelManager.Views.BookingDetailsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Детали заявки" 
        Height="500" Width="600"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Background="#F8FAFC">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Заголовок -->
        <TextBlock Grid.Row="0" Grid.ColumnSpan="2" 
                   Text="Детали заявки на бронирование" 
                   FontSize="20" FontWeight="Bold" 
                   HorizontalAlignment="Center" 
                   Margin="0,0,0,20" 
                   Foreground="#1E3A8A"/>

        <!-- ID -->
        <TextBlock Grid.Row="1" Grid.Column="0" 
                   Text="ID заявки:" 
                   Margin="10,5" 
                   VerticalAlignment="Center"
                   FontWeight="SemiBold"
                   Foreground="#1E3A8A"/>
        <TextBlock Grid.Row="1" Grid.Column="1" 
                   x:Name="tbId" 
                   Margin="10,5" 
                   VerticalAlignment="Center"
                   FontSize="14"/>

        <!-- Клиент -->
        <TextBlock Grid.Row="2" Grid.Column="0" 
                   Text="Клиент:" 
                   Margin="10,5" 
                   VerticalAlignment="Center"
                   FontWeight="SemiBold"
                   Foreground="#1E3A8A"/>
        <TextBlock Grid.Row="2" Grid.Column="1" 
                   x:Name="tbClient" 
                   Margin="10,5" 
                   VerticalAlignment="Center"
                   FontSize="14"/>

        <!-- Тур -->
        <TextBlock Grid.Row="3" Grid.Column="0" 
                   Text="Тур:" 
                   Margin="10,5" 
                   VerticalAlignment="Center"
                   FontWeight="SemiBold"
                   Foreground="#1E3A8A"/>
        <TextBlock Grid.Row="3" Grid.Column="1" 
                   x:Name="tbTour" 
                   Margin="10,5" 
                   VerticalAlignment="Center"
                   FontSize="14"/>

        <!-- Дата -->
        <TextBlock Grid.Row="4" Grid.Column="0" 
                   Text="Дата бронирования:" 
                   Margin="10,5" 
                   VerticalAlignment="Center"
                   FontWeight="SemiBold"
                   Foreground="#1E3A8A"/>
        <TextBlock Grid.Row="4" Grid.Column="1" 
                   x:Name="tbBookingDate" 
                   Margin="10,5" 
                   VerticalAlignment="Center"
                   FontSize="14"/>

        <!-- Статус -->
        <TextBlock Grid.Row="5" Grid.Column="0" 
                   Text="Статус:" 
                   Margin="10,5" 
                   VerticalAlignment="Center"
                   FontWeight="SemiBold"
                   Foreground="#1E3A8A"/>
        <Border Grid.Row="5" Grid.Column="1" 
                x:Name="statusBorder" 
                Margin="10,5" 
                Padding="10,5" 
                CornerRadius="5">
            <TextBlock x:Name="tbStatus" 
                       FontSize="14" 
                       FontWeight="Bold"
                       HorizontalAlignment="Center"/>
        </Border>

        <!-- Количество человек -->
        <TextBlock Grid.Row="6" Grid.Column="0" 
                   Text="Количество человек:" 
                   Margin="10,5" 
                   VerticalAlignment="Center"
                   FontWeight="SemiBold"
                   Foreground="#1E3A8A"/>
        <TextBlock Grid.Row="6" Grid.Column="1" 
                   x:Name="tbPeopleCount" 
                   Margin="10,5" 
                   VerticalAlignment="Center"
                   FontSize="14"/>

        <!-- Общая стоимость -->
        <TextBlock Grid.Row="7" Grid.Column="0" 
                   Text="Общая стоимость:" 
                   Margin="10,5" 
                   VerticalAlignment="Center"
                   FontWeight="SemiBold"
                   Foreground="#1E3A8A"/>
        <TextBlock Grid.Row="7" Grid.Column="1" 
                   x:Name="tbTotalPrice" 
                   Margin="10,5" 
                   VerticalAlignment="Center"
                   FontSize="16"
                   FontWeight="Bold"
                   Foreground="#10B981"/>

        <!-- Комментарий -->
        <TextBlock Grid.Row="8" Grid.Column="0" 
                   Text="Комментарий:" 
                   Margin="10,5" 
                   VerticalAlignment="Top"
                   FontWeight="SemiBold"
                   Foreground="#1E3A8A"/>
        <Border Grid.Row="8" Grid.Column="1" 
                Margin="10,5" 
                BorderBrush="#CBD5E1" 
                BorderThickness="1" 
                Background="White" 
                Padding="10">
            <ScrollViewer VerticalScrollBarVisibility="Auto" 
                          MaxHeight="150">
                <TextBlock x:Name="tbComment" 
                           TextWrapping="Wrap"/>
            </ScrollViewer>
        </Border>

        <!-- Кнопка закрытия -->
        <Button Grid.Row="9" Grid.ColumnSpan="2" 
                x:Name="BtnClose" 
                Content="Закрыть" 
                Width="120" 
                Height="40" 
                HorizontalAlignment="Center" 
                Margin="0,20" 
                Background="#3B82F6" 
                Foreground="White" 
                BorderBrush="#1D4ED8" 
                FontWeight="Bold"
                Cursor="Hand"
                Click="BtnClose_Click"/>
    </Grid>
</Window>