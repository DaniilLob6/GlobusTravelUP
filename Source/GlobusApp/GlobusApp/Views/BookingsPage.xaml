<Page x:Class="GlobusTravelManager.Views.BookingsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Бронирования" 
      Background="#F8FAFC">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Панель управления -->
        <Border Grid.Row="0" 
                Background="#EFF6FF" 
                Padding="15" 
                Margin="0,0,0,10">
            <StackPanel>
                <TextBlock Text="Управление бронированиями" 
                           FontSize="18" 
                           FontWeight="Bold" 
                           Foreground="#1E3A8A" 
                           Margin="0,0,0,10"/>

                <StackPanel Orientation="Horizontal">
                    <Button x:Name="BtnNewBooking" 
                            Content="+ Новая заявка" 
                            Width="140" 
                            Height="35" 
                            Margin="0,0,10,0" 
                            Background="#10B981" 
                            Foreground="White" 
                            BorderBrush="#047857"
                            FontWeight="Bold"
                            Cursor="Hand"
                            Click="BtnNewBooking_Click"/>
                    <Button x:Name="BtnConfirmBooking" 
                            Content="✅ Подтвердить" 
                            Width="140" 
                            Height="35" 
                            Margin="10,0" 
                            Background="#22C55E" 
                            Foreground="White" 
                            BorderBrush="#16A34A"
                            FontWeight="Bold"
                            Cursor="Hand"
                            Click="BtnConfirmBooking_Click"/>
                    <Button x:Name="BtnCancelBooking" 
                            Content="❌ Отменить" 
                            Width="140" 
                            Height="35" 
                            Margin="10,0" 
                            Background="#EF4444" 
                            Foreground="White" 
                            BorderBrush="#DC2626"
                            FontWeight="Bold"
                            Cursor="Hand"
                            Click="BtnCancelBooking_Click"/>
                    <Button x:Name="BtnViewDetails" 
                            Content="👁️ Подробнее" 
                            Width="140" 
                            Height="35" 
                            Margin="10,0" 
                            Background="#3B82F6" 
                            Foreground="White" 
                            BorderBrush="#1D4ED8"
                            FontWeight="Bold"
                            Cursor="Hand"
                            Click="BtnViewDetails_Click"/>
                    <Button x:Name="BtnRefresh" 
                            Content="🔄 Обновить" 
                            Width="120" 
                            Height="35" 
                            Margin="10,0" 
                            Background="#8B5CF6" 
                            Foreground="White" 
                            BorderBrush="#7C3AED"
                            FontWeight="Bold"
                            Cursor="Hand"
                            Click="BtnRefresh_Click"/>
                </StackPanel>
            </StackPanel>
        </Border>

        <!-- Панель фильтров -->
        <Border Grid.Row="1" 
                Background="#F1F5F9" 
                Padding="15" 
                Margin="0,0,0,10">
            <StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                    <TextBlock Text="Поиск:" 
                               VerticalAlignment="Center" 
                               Width="60"
                               Foreground="#475569"/>
                    <TextBox x:Name="txtSearch" 
                             Width="250" 
                             Height="30" 
                             Margin="5,0" 
                             Padding="5" 
                             VerticalAlignment="Center"
                             TextChanged="TxtSearch_TextChanged"/>

                    <RadioButton x:Name="rbSearchClient" 
                                 Content="По клиенту" 
                                 GroupName="SearchType" 
                                 IsChecked="True" 
                                 Margin="20,0,10,0" 
                                 VerticalAlignment="Center"
                                 Foreground="#475569"/>
                    <RadioButton x:Name="rbSearchId" 
                                 Content="По ID" 
                                 GroupName="SearchType" 
                                 Margin="10,0" 
                                 VerticalAlignment="Center"
                                 Foreground="#475569"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="Статус:" 
                               VerticalAlignment="Center" 
                               Width="60"
                               Foreground="#475569"/>
                    <ComboBox x:Name="cmbStatus" 
                              Width="200" 
                              Height="30" 
                              Margin="5,0"
                              SelectionChanged="CmbStatus_SelectionChanged"/>

                    <TextBlock Text="Сортировка:" 
                               VerticalAlignment="Center" 
                               Margin="40,0,10,0"
                               Foreground="#475569"/>
                    <ComboBox x:Name="cmbSort" 
                              Width="200" 
                              Height="30" 
                              Margin="5,0"
                              SelectionChanged="CmbSort_SelectionChanged">
                        <ComboBoxItem Content="По дате (новые)"/>
                        <ComboBoxItem Content="По дате (старые)"/>
                        <ComboBoxItem Content="По сумме (↑)"/>
                        <ComboBoxItem Content="По сумме (↓)"/>
                    </ComboBox>
                </StackPanel>
            </StackPanel>
        </Border>

        <!-- Список бронирований -->
        <DataGrid Grid.Row="2" 
                  x:Name="dgBookings" 
                  AutoGenerateColumns="False" 
                  CanUserAddRows="False" 
                  Background="White" 
                  BorderBrush="#CBD5E1" 
                  RowBackground="#F8FAFC" 
                  AlternatingRowBackground="#F1F5F9"
                  SelectionMode="Single">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" 
                                    Binding="{Binding Id}" 
                                    Width="60"/>
                <DataGridTextColumn Header="Клиент" 
                                    Binding="{Binding ClientName}" 
                                    Width="*"/>
                <DataGridTextColumn Header="Тур" 
                                    Binding="{Binding TourName}" 
                                    Width="*"/>
                <DataGridTextColumn Header="Дата" 
                                    Binding="{Binding BookingDate, StringFormat={}{0:dd.MM.yyyy}}" 
                                    Width="100"/>
                <DataGridTextColumn Header="Человек" 
                                    Binding="{Binding PeopleCount}" 
                                    Width="80"/>
                <DataGridTextColumn Header="Статус" 
                                    Binding="{Binding Status}" 
                                    Width="120"/>
                <DataGridTextColumn Header="Сумма" 
                                    Binding="{Binding TotalPrice, StringFormat={}{0:N0} ₽}" 
                                    Width="120"/>
            </DataGrid.Columns>
        </DataGrid>

        <!-- Статистика -->
        <Border Grid.Row="3" 
                Background="#F1F5F9" 
                Padding="10">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <TextBlock Text="Всего заявок: " 
                           Foreground="#475569" 
                           FontWeight="Bold"/>
                <TextBlock x:Name="tbTotalBookings" 
                           Text="0" 
                           Foreground="#1E40AF" 
                           FontWeight="Bold" 
                           Margin="5,0,20,0"/>

                <TextBlock Text="Новые: " 
                           Foreground="#475569" 
                           FontWeight="Bold"/>
                <TextBlock x:Name="tbNewBookings" 
                           Text="0" 
                           Foreground="#3B82F6" 
                           FontWeight="Bold" 
                           Margin="5,0,20,0"/>

                <TextBlock Text="Подтверждены: " 
                           Foreground="#475569" 
                           FontWeight="Bold"/>
                <TextBlock x:Name="tbConfirmedBookings" 
                           Text="0" 
                           Foreground="#10B981" 
                           FontWeight="Bold" 
                           Margin="5,0,20,0"/>

                <TextBlock Text="Отменены: " 
                           Foreground="#475569" 
                           FontWeight="Bold"/>
                <TextBlock x:Name="tbCancelledBookings" 
                           Text="0" 
                           Foreground="#EF4444" 
                           FontWeight="Bold" 
                           Margin="5,0,0,0"/>
            </StackPanel>
        </Border>
    </Grid>
</Page>