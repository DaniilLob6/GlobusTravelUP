<Window x:Class="GlobusTravelManager.Views.ClientEditWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Редактирование клиента" 
        Height="450" Width="500"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Background="#F8FAFC">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Заголовок -->
        <TextBlock Grid.Row="0" Grid.ColumnSpan="2" 
                   Text="Редактирование данных клиента" 
                   FontSize="20" FontWeight="Bold" 
                   HorizontalAlignment="Center" 
                   Margin="0,0,0,20" 
                   Foreground="#1E3A8A"/>

        <!-- ФИО -->
        <TextBlock Grid.Row="1" Grid.Column="0" 
                   Text="ФИО:" 
                   Margin="10,5" 
                   VerticalAlignment="Center"
                   FontWeight="SemiBold"
                   Foreground="#1E3A8A"/>
        <TextBox Grid.Row="1" Grid.Column="1" 
                 x:Name="txtFullName" 
                 Margin="10,5" 
                 Height="35" 
                 Padding="8"/>

        <!-- Логин -->
        <TextBlock Grid.Row="2" Grid.Column="0" 
                   Text="Логин (email):" 
                   Margin="10,5" 
                   VerticalAlignment="Center"
                   FontWeight="SemiBold"
                   Foreground="#1E3A8A"/>
        <TextBox Grid.Row="2" Grid.Column="1" 
                 x:Name="txtLogin" 
                 Margin="10,5" 
                 Height="35" 
                 Padding="8"/>

        <!-- Пароль -->
        <TextBlock Grid.Row="3" Grid.Column="0" 
                   Text="Новый пароль:" 
                   Margin="10,5" 
                   VerticalAlignment="Center"
                   FontWeight="SemiBold"
                   Foreground="#1E3A8A"/>
        <PasswordBox Grid.Row="3" Grid.Column="1" 
                     x:Name="txtPassword" 
                     Margin="10,5" 
                     Height="35" 
                     Padding="8"/>

        <!-- Подтверждение пароля -->
        <TextBlock Grid.Row="4" Grid.Column="0" 
                   Text="Подтверждение:" 
                   Margin="10,5" 
                   VerticalAlignment="Center"
                   FontWeight="SemiBold"
                   Foreground="#1E3A8A"/>
        <PasswordBox Grid.Row="4" Grid.Column="1" 
                     x:Name="txtPasswordConfirm" 
                     Margin="10,5" 
                     Height="35" 
                     Padding="8"/>

        <!-- Примечание -->
        <TextBlock Grid.Row="5" Grid.ColumnSpan="2" 
                   Text="Оставьте поля пароля пустыми, если не хотите его менять" 
                   Foreground="#64748B" 
                   FontSize="11" 
                   FontStyle="Italic" 
                   Margin="10,5" 
                   TextWrapping="Wrap"/>

        <!-- Сообщение об ошибке -->
        <TextBlock Grid.Row="6" Grid.ColumnSpan="2" 
                   x:Name="ErrorMessageTextBlock" 
                   Foreground="#DC2626" 
                   HorizontalAlignment="Center" 
                   Margin="10,5" 
                   TextWrapping="Wrap"
                   FontSize="12"/>

        <!-- Кнопки -->
        <StackPanel Grid.Row="7" Grid.ColumnSpan="2" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Center" 
                    Margin="0,20">
            <Button x:Name="BtnSave" 
                    Content="Сохранить" 
                    Width="120" 
                    Height="40" 
                    Margin="10,0" 
                    Background="#10B981" 
                    Foreground="White" 
                    BorderBrush="#047857" 
                    FontWeight="Bold"
                    Cursor="Hand"
                    Click="BtnSave_Click"/>
            <Button x:Name="BtnCancel" 
                    Content="Отмена" 
                    Width="120" 
                    Height="40" 
                    Margin="10,0" 
                    Background="#94A3B8" 
                    Foreground="White" 
                    BorderBrush="#64748B" 
                    FontWeight="Bold"
                    Cursor="Hand"
                    Click="BtnCancel_Click"/>
        </StackPanel>
    </Grid>
</Window>